extends layout.pug

block content
    div.row.justify-content-center
        div.col-md-8
            div.card
                div.card-header Login
                div.card-body
                    if(errors)
                        div.alert.alert-danger
                            ul
                                each error in errors
                                    li=error.msg
                    form(class="",method="POST",action="/dashboard/login")
                        div.form-group
                            label.col-lg-4.control-label E-Mail Adress
                            div.col-lg-6
                                input(class="form-control",type="text",name="email")
                        div.form-group
                            label.col-lg-4.control-label Password
                            div.col-lg-6
                                input(class="form-control",type="password",name="password")
                        div.form-group
                            div.col-md-6.col-md-offset-4
                                button.btn.btn-primary Login

